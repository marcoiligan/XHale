<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblLastRecord"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:text="ABCABCABC"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/lblFullName"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="12dp"
        android:text="Last name, first name m."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient" />

    <TextView
        android:id="@+id/patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="263dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="263dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="71dp"
        android:text="Patient"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Record"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="156dp" />

    <Button
        android:id="@+id/btnAddRecord"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="107dp"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="107dp"
        android:layout_marginStart="108dp"
        android:background="@drawable/greenbtn"
        android:text="Add Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>